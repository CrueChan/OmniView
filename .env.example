# OmniView environment variable configuration

# ===== Basic Configuration =====
PORT=8080
PASSWORD=your_secure_password_here
ADMINPASSWORD=your_admin_password_here
DEBUG=false

# ===== CORS Configuration =====
# Allowed sources. It is recommended to set a specific domain name for the production environment.
CORS_ORIGIN=*

# ===== Request Configuration =====
REQUEST_TIMEOUT=5000
MAX_RETRIES=2
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# ===== Cache Configuration =====
CACHE_MAX_AGE=1d

# ===== Security Configuration =====
# Comma separated list of blocked hosts
BLOCKED_HOSTS=localhost,127.0.0.1,0.0.0.0,::1

# Blocked IP prefixes (comma separated)
BLOCKED_IP_PREFIXES=192.168.,10.,172.

# Filtered response headers (comma separated)
FILTERED_HEADERS=content-security-policy,cookie,set-cookie,x-frame-options,access-control-allow-origin